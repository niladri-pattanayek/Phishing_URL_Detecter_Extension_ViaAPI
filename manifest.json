{
  "manifest_version": 3,
  "name": "URL Shield",
  "version": "1.0",
  "description": "Detects malicious URLs using Gemini AI.",
  "permissions": ["tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}